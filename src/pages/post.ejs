<div class="post">
  <h2 class="post-title"><%= title %></h2>
  <div class="post-meta">
    <img class="avatar post-avatar" src="/static/img/avatar.png" alt="me" title="Patrick Simpson">
    <div class="post-date"><%= date %></div>
    <div class="post-tags">
    <% if(tags) {
        tags.forEach((t, i) => {
    %>
          <a href="/tag/<%= t %>/"><%= t %></a><% if(i < tags.length - 1) {%>,<% } %>
    <% });
      }
    %>
    </div>
  </div>
  <div class="post-body" >
  <%- data %>
  </div>
</div>
