<%
  let metaSummary = false;
  let metaTitle = title;
   if (!page) { page = 'index'; }
   if (!title) { title = 'Home'; }
   if (title === 'Home') {
       metaTitle = false;
   }
   if (!slug) { slug = ''; }

   if (!summary) {
       metaSummary = false
   } else {
       metaSummary = summary;
  }
%>
<!doctype html>
<html>
  <head>
    <%- include('parts/meta', { title, metaTitle, slug, metaSummary }); %>
    <link href="/static/css/styles.css" rel="stylesheet">
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Roboto+Slab" rel="stylesheet">
  </head>
  <body>
      <% if (title == 'Home' || title == 'About') { %>
        <%- include('parts/home-header'); %>
      <% } else { %>
        <%- include('parts/header'); %>
      <% } %>
    <div class="main">
      <% if (data) { %>
        <%- include(`${page}`, data); %>
      <% } else { %>
        <%- include(`${page}`); %>
      <% } %>
    </div>

    <%- include('parts/footer'); %>
  </body>
</html>
