<%
   if (!page) { page = 'index'; }
   if (!title) { title = 'home'; }
%>
<!doctype html>
<html>
  <head>
  <%- include('parts/meta', {title}); %>
  <style><%- typography.toString() %></style>
  <link href="/static/css/styles.css" rel="stylesheet">
  </head>
  <body>
    <%- include('parts/header'); %>

    <div class="main">
    <% if (data) { %>
      <%- include(`${page}`, data); %>
    <% } else { %>
      <%- include(`${page}`); %>
    <% } %>
    </div>

    <%- include('parts/footer'); %>
  </body>
</html>
